doctype html
html
  head
    title Mastering Chrome Devtools
    link(rel='stylesheet', type='text/css', href='/css/bootstrap.css')
    link(rel='stylesheet', type='text/css', href='/css/style.css')
    link(rel="icon", sizes="32x32", type="image/png", href="/img/favicon.png")
  body
    nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Mastering DevTools
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/editing') Editing
            li
              a(href='/debugging') Debugging
            li
              a(href='/profiling') Profiling
            li
              a(href='/timing') Timing
            li
              a(href='/page-jank') Page Jank
            li
              a(href='/memory-leaks') Memory Leaks
    .row.main-content
      block content
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.js')
    script(src='/js/lodash.js')
    if scripts
      each script in scripts
        script(src='/js/' + script)
